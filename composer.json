{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "northwestern-sysdev/northwestern-laravel-starter",
    "type": "project",
    "require": {
        "php": "^8.4",
        "ext-ctype": "*",
        "ext-curl": "*",
        "ext-dom": "*",
        "ext-fileinfo": "*",
        "ext-filter": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "ext-pdo": "*",
        "ext-simplexml": "*",
        "ext-tokenizer": "*",
        "ext-xml": "*",
        "filament/filament": "^4.0",
        "lab404/laravel-impersonate": "^1.7",
        "laravel/framework": "^12.0",
        "laravel/telescope": "^5.5",
        "laravel/tinker": "^2.10.1",
        "league/flysystem-aws-s3-v3": "^3.29",
        "livewire/livewire": "^3.6",
        "mockery/mockery": "^1.6",
        "northwestern-sysdev/laravel-soa": "^11.2",
        "northwestern-sysdev/northwestern-laravel-ui": "^4.0",
        "owen-it/laravel-auditing": "^14.0",
        "phiki/phiki": "^2.0",
        "pxlrbt/filament-environment-indicator": "^3.3",
        "sentry/sentry-laravel": "^4.13",
        "spatie/laravel-db-snapshots": "^2.7",
        "spatie/laravel-health": "^1.34",
        "spatie/laravel-permission": "^6.16",
        "spatie/security-advisories-health-check": "^1.3",
        "zircote/swagger-php": "^5.7"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^3.5.5",
        "brianium/paratest": "^7.8",
        "doctrine/dbal": "^4.2",
        "driftingly/rector-laravel": "^2.0",
        "fakerphp/faker": "^1.23",
        "fruitcake/laravel-telescope-toolbar": "^1.3",
        "laracasts/cypress": "^3.03",
        "larastan/larastan": "^3.0",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.21",
        "laravel/sail": "^1.41",
        "nunomaduro/collision": "^8.6",
        "pestphp/pest": "^4.1",
        "phpstan/phpstan-mockery": "^2.0",
        "phpunit/phpunit": "^12.0",
        "rector/rector": "^2.0",
        "roave/security-advisories": "dev-latest",
        "spatie/laravel-ray": "^1.39",
        "tomasvotruba/bladestan": "^0.11.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan filament:upgrade"
        ],
        "post-update-cmd": [
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:meta",
            "@php artisan ide-helper:models -N",
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"if (!file_exists('.env')) { copy('.env.example', '.env'); }\""
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite"
        ],
        "rector": "vendor/bin/rector process --ansi",
        "rector:dry": "vendor/bin/rector process --dry-run --ansi",
        "format:php": "vendor/bin/pint --ansi",
        "format:frontend": "pnpm run format",
        "analyse:php": "vendor/bin/phpstan analyse --memory-limit=2G",
        "openapi:generate": "@php ./vendor/bin/openapi app/",
        "openapi:generate:v1": "@composer openapi:generate -- --exclude app/Http/Controllers/Api/V2 --output docs/schemas/api-schema.yaml",
        "ide-helper:generate": [
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:meta",
            "@php artisan ide-helper:models -N"
        ],
        "all": [
            "@rector",
            "@format:php",
            "@format:frontend",
            "@analyse:php"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

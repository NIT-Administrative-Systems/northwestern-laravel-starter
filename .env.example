APP_NAME="Northwestern Laravel Starter"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost
PRODUCTION_URL=

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database
BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=northwestern_laravel_starter_local
DB_USERNAME=root
DB_PASSWORD=

# This database will be used to run PHPUnit tests against an isolated database
# in order to avoid destructive operations to the main database.
DB_PHPUNIT_DATABASE=northwestern_laravel_starter_test

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_SECURE_COOKIE=true
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
QUEUE_CONNECTION=redis
CACHE_STORE=database

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=2525
MAIL_USERNAME="${APP_NAME}"
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="no-reply@northwestern.edu"
MAIL_FROM_NAME="${APP_NAME}"

# !! Remember to provision a bucket in the MinIO console !!
AWS_ACCESS_KEY_ID=herd
AWS_SECRET_ACCESS_KEY=secretkey
AWS_DEFAULT_REGION=us-east-1
AWS_URL=https://minio.adoes.northwestern.edu
AWS_ENDPOINT=https://minio.adoes.northwestern.edu
AWS_USE_PATH_STYLE_ENDPOINT=true
AWS_BUCKET=northwestern-laravel-starter
AWS_MINIO_CONSOLE=http://localhost:9000

# This is necessary for large files, -BUT- there is a caveat: in Herd/etc, in some cases, you will get "unable to read"
# errors because cURL cannot connect to MinIO over HTTPS. Regular, non-streamed reads work fine because the native PHP
# HTTP code is used, but cURL may be compelled (by Schannel on windows) to check the CRL for the certs, which is not
# specified since these aren't "real" certs.
#
# If you're running out of memory when processing large zip files, set this to true and use http://localhost:9000
# for the AWS_URL & AWS_ENDPOINT. That may break Wildcard photos though, since it becomes a mix of HTTP + HTTPS
# resources on the page, and your browser won't like that.
S3_STREAM_READS=false

# Do not uncomment these variables unless you need to test something related to Sentry
#SENTRY_LARAVEL_DSN=
#SENTRY_TRACES_SAMPLE_RATE=1.0

# Microsoft Entra ID SSO
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=

# Comma-separated NetIDs automatically assigned the Super Administrator role during environment setup
SUPER_ADMIN_NETIDS=

# Local Authentication Configuration
LOCAL_AUTH_ENABLED=true

# API Configuration - access control, rate limiting, and request logging
API_ENABLED=true
API_RATE_LIMIT_ATTEMPTS=1800
API_REQUEST_LOGGING_ENABLED=true
API_REQUEST_LOG_RETENTION_DAYS=90
API_REQUEST_LOGGING_SAMPLING_ENABLED=false
API_REQUEST_LOGGING_SAMPLE_RATE=1.0
API_ACCESS_TOKEN_EXPIRATION_NOTIFICATIONS_ENABLED=true
API_DEMO_USER_ACCESS_TOKEN=

# Northwestern Directory Search
DIRECTORY_SEARCH_API_KEY=
WILDCARD_PHOTO_SYNC_ENABLED=false

# Northwestern EventHub
EVENT_HUB_MOCK_ENABLED=true
EVENT_HUB_BASE_URL=https://northwestern-dev.apigee.net
EVENT_HUB_API_KEY=
EVENT_HUB_HMAC_VERIFICATION_SHARED_SECRET=

# Pusher
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=us2

# Used by Cypress to export/reimport the database during tests.
# You can leave it blank and it will try to auto-discover the Herd postgres bin dir.
# Otherwise, here are the Windows & MacOS values for Postgres 16:
# PG_BIN_DIRECTORY="C:\\Users\\<your username>\\.config\\herd\\bin\\services\\postgresql\\16\\bin"
# PG_BIN_DIRECTORY=/Users/Shared/Herd/services/postgresql/16/bin/
